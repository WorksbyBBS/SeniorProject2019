<div class="page-ttl">
    <div class="layer-stretch">
        <div class="page-ttl-container">
            <h1>{{{title}}}</h1>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="panel panel-default">
        <!--<div class="panel-head">-->
            <!--<div class="panel-title">Panel with Tabs</div>-->
        <!--</div>-->
        <div class="panel-wrapper pr-2 pl-2 pb-3">
            <ul class="nav nav-tabs nav-tabs-line nav-tabs-line-primary">
                <li class="nav-item">
                    <a class="nav-link active show" href="#logintab" data-toggle="tab">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="#registertab" data-toggle="tab">Register</a>
                </li>
            </ul>
            <div class="tab-content pl-3 pr-3">
                <div role="tabpanel" class="tab-pane active show" id="logintab">
                    {{#if error}}
                        <div class="alert alert-icon alert-danger alert-dismissible fade show" role="alert">
                            <div class="alert--icon">
                                <i class="fa fa-exclamation-triangle"></i>
                            </div>
                            <div class="alert-text">
                                {{error}}
                            </div>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                            </button>
                        </div>
                    {{/if}}

                    <!--Start of login form-->
                    <div id="login-form" class="login-form ">
                        <form class="form-vertical" method="post" action="/login">
                            <div class="form-group">
                                <label class="control-label col-form-label"><i class="icon-user"></i> Username</label>
                                <div class="col-sm-12">
                                    <input class="form-control" type="text" name="username" id="username" placeholder="Enter your Username" autocomplete="off" required>
                                </div>
                            </div>

                            {{#if error}}
                                <div class="alert alert-danger fade in">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    <div id="errMessage">{{error}}</div>
                                </div>
                            {{/if}}

                            <div class="form-group">
                                <label class="control-label col-form-label"><i class="icon-key"></i> Password</label>
                                <div class="col-sm-12">
                                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter your Password" autocomplete="off" required>
                                </div>
                            </div>
                            <div class="text-center">
                                <div class="login-submit">
                                    <button type="submit" id="submitBtn" class="btn btn-primary btn-pill" name="submitBtn" value="submit">Submit</button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!--End of login form-->
                </div>
                <div role="tabpanel" class="tab-pane " id="registertab">
                    <h4>Please contact your institution to obtain your credentials</h4>
                </div>
            </div>
        </div>
    </div>
</div>