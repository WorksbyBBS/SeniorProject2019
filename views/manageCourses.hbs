<div class="page-ttl">
    <div class="layer-stretch">
        <div class="page-ttl-container">
            <h1>{{{title}}}</h1>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            {{#if success}}
                <div class="alert alert-icon alert-success alert-dismissible fade show" role="alert">
                    <div class="alert--icon">
                        <i class="fa fa-check"></i>
                    </div>
                    <div class="alert-text">
                        {{success}}
                    </div>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
            {{/if}}

            {{#if error}}
                <div class="alert alert-icon alert-danger alert-dismissible fade show" role="alert">
                    <div class="alert--icon">
                        <i class="fa fa-exclamation-triangle"></i>
                    </div>
                    <div class="alert-text">
                        {{error}}
                    </div>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
            {{/if}}
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-4">
            <a class="btn btn-primary btn-pill m-1" id="addCourseButton" onclick="addCourse()"><i
                    class="fa fa-plus-circle mr-2"></i>Add Course</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-warning btn-pill m-1" id="addSkillButton" onclick="addSkill()"><i
                    class="fa fa-plus-circle mr-2"></i>Add Skills</a><br><br>
        </div>
        <div class="col-md-4">
            <a class="btn btn-success btn-pill m-1" id="addCriteriaButton" onclick="addCriteria()"><i
                    class="fa fa-plus-circle mr-2"></i>Add Criteria</a><br><br>
        </div>
    </div>
</div>
<div id="add-course-form"></div>
<div id="add-skills-form"></div>
<div id="add-criteria-form"></div>

<div class="container">
    <div class="panel">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <p><span><i>Note: Clicking on a row will show/hide all skills for each course</i></span></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table" id="table">
                        <thead class="light-background">
                        <tr>
                            <th>Course ID</th>
                            <th>Course Name</th>
                            <th>Semester</th>
                            <th>Year</th>
                            <th>Number of Skills</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each courses}}
                            <tr class="coursesCategory" onclick="toggleSkills(this)">
                                <td>{{course_id}}</td>
                                <td>{{course_name}}</td>
                                <td>{{semester}}</td>
                                <td>{{year}}</td>
                                {{#ifSkillsIsZero countSkills 0}}
                                    <td><span class="badge badge-danger badge-md badge-pill">{{countSkills}}</span></td>
                                    {{else}}
                                    <td><span class="badge badge-success badge-md badge-pill">{{countSkills}}</span></td>
                                {{/ifSkillsIsZero}}

                            </tr>
                            {{#if skills}}
                                <thead class="skillCategory thead-dark" >
                                <tr >
                                    <th></th>
                                    <th colspan="1">Skill ID</th>
                                    <th colspan="3">Skill Name</th>
                                </tr>
                                </thead>

                                {{#each skills}}
                                    <tr class="skillCategory">
                                        <td></td>
                                        <td colspan="1">{{this.skill_id}}</td>
                                        <td colspan="3">{{this.skill_name}}</td>
                                    </tr>
                                {{/each}}
                            {{/if}}
                            <tr class="light-background"><td colspan="5"></td></tr>
                        <!--<tr class="spaceUnder">-->

                        <!--</tr>-->
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="customJavascript/manageCourses.js"></script>